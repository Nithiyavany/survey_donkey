<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<br> <br> <br>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">

            <h1 class="text-center">Create a Survey</h1>
            
            <form class="form" method="POST">

                <div class="form-group">
                    <fieldset>
                        <legend>Survey Type</legend>
                        Please choose a survey type: 
                        <div>
                            <input type = "radio" name = "optSurveyType" id = "surveyTypeMultipleChoice" value="Multiple Choice" checked>&nbsp;
                            <label for="surveyTypeMultipleChoice">Multiple Choice</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                            <input type = "radio" name = "optSurveyType" id = "surveyTypeShortAnswers" value="Short Answers" onclick="location.href='/survey-list/addShortAnswers'">&nbsp;
                            <label for="surveyTypeShortAnswers">Short Answers</label>
                        </div>
                    </fieldset>
                </div>
                <br>

                <div class="form-group">
                    <label for="titleTextField">Survey Name</label>
                    <input type="text" class="form-control" id="titleTextField" placeholder="Type Survey Name" name="title" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="descriptionTextField">Survey Description</label>
                    <textarea rows="1" type="text" class="form-control" id="descriptionTextField" placeholder="Type Survey Description" name="description" required>
                    </textarea>
                </div>
                <br>
                <div class="form-group">
                <label for="endDate">End Date</label>
                <input type="date" class="form-control" id="endDate" name="endDate" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="q1TextField">Question</label>
                    <input type="text" class="form-control" id="q1TestField" placeholder="Type Question" name="q1" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="q1Opt1TextField">Option 1</label>
                    <input type="text" class="form-control" id="q1Opt1TextField" placeholder="Set Option 1" name="q1Opt1" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="q1Opt2TextField">Option 2</label>
                    <input type="text" class="form-control" id="q1Opt2TextField" placeholder="Set Option 2" name="q1Opt2" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="q1Opt3TextField">Option 3</label>
                    <input type="text" class="form-control" id="q1Opt3TextField" placeholder="Set Option 3" name="q1Opt3" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="q1Opt4TextField">Option 4</label>
                    <input type="text" class="form-control" id="q1Opt4TextField" placeholder="Set Option 4" name="q1Opt4" required>
                </div>

                <br> 
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>


